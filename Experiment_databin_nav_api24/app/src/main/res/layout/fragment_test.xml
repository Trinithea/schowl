<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@drawable/ic_owl_background_op24">
    <TextView
            android:text="0/15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/TxtQuestionCount" android:textSize="18sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" app:fontFamily="monospace"/>
    <TextView
            android:text="Question?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/TxtQuestion" app:fontFamily="monospace"
            android:textColor="@color/navyBlue" android:textSize="30sp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/TxtQuestionCount"/>
    <Button
            android:text="@string/show_solution"
            android:layout_width="157dp"
            android:layout_height="47dp" android:id="@+id/BtnShowSolution"
            android:background="@drawable/rounded_button_peacock_blue"
            android:textSize="18sp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/TxtQuestion" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:textColor="@color/ivoryYellow"/>
    <TextView
            android:text="Solution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TxtSolution" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/BtnShowSolution" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:textSize="18sp" app:fontFamily="monospace"/>
    <TextView
            android:text="@string/how_difficult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/TxtDifficulty" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/SkbDifficulty" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:fontFamily="monospace" android:textColor="@color/peacockBlue"
            android:textSize="24sp"/>
    <SeekBar
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            android:id="@+id/SkbDifficulty" android:max="10"
            style="@android:style/Widget.Material.SeekBar.Discrete" android:progress="3"
            app:layout_constraintBottom_toTopOf="@+id/BtnNext" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"/>
    <Button
            android:text="@string/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/BtnNext"
            android:background="@drawable/rounded_button_red"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>