<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@drawable/ic_owl_background_op24">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/scroll_allLyt">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="0/15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/TxtQuestionCount" android:textSize="18sp"
                    android:layout_marginTop="8dp" android:layout_marginEnd="8dp"
                    app:fontFamily="monospace" android:layout_gravity="right"/>
            <TextView
                    android:text="Question?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/TxtQuestion" app:fontFamily="monospace"
                    android:textColor="@color/navyBlue" android:textSize="30sp" android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp" android:layout_gravity="center_horizontal"/>
            <Button
                    android:text="@string/show_solution"
                    android:layout_width="157dp"
                    android:layout_height="47dp" android:id="@+id/BtnShowSolution"
                    android:background="@drawable/rounded_button_peacock_blue"
                    android:textSize="18sp" android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp" android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/ivoryYellow" android:layout_gravity="center_horizontal"/>
            <ScrollView
                    android:layout_width="372dp"
                    android:layout_height="207dp" android:layout_marginLeft="16dp" android:layout_marginRight="16dp"
                    android:id="@+id/scroll_solution" android:layout_marginTop="16dp">
                <TextView
                        android:text="Solution"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/TxtSolution" android:layout_marginTop="16dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp" android:textSize="18sp" app:fontFamily="monospace"
                        android:layout_gravity="center_horizontal" android:gravity="center_horizontal"
                        android:layout_marginRight="16dp" android:layout_marginLeft="16dp"/>
            </ScrollView>
            <TextView
                    android:text="@string/how_difficult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/TxtDifficulty"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" app:fontFamily="monospace" android:textColor="@color/peacockBlue"
                    android:textSize="24sp" android:layout_gravity="center_horizontal" android:layout_marginTop="16dp"/>
            <SeekBar
                    android:layout_width="336dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/SkbDifficulty" android:max="10"
                    style="@android:style/Widget.Material.SeekBar.Discrete" android:progress="3"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                    android:layout_gravity="center_horizontal"/>
            <Button
                    android:text="@string/next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/BtnNext"
                    android:background="@drawable/rounded_button_red"
                    app:layout_constraintEnd_toEndOf="parent" tools:layout_editor_absoluteY="250dp"
                    android:layout_gravity="center_horizontal" android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>