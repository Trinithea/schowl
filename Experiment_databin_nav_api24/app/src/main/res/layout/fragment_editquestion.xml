<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/LytEditQuestion"
            android:scrollbarAlwaysDrawVerticalTrack="false" android:fadeScrollbars="true">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:gravity="start|top"
                android:ems="10"
                android:id="@+id/EdtQuestion" android:typeface="monospace" android:textSize="24sp"
                android:layout_marginTop="16dp" android:layout_marginLeft="16dp" android:layout_marginRight="16dp"
                android:hint="@string/ask_a_question"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:gravity="start|top"
                android:ems="10"
                android:id="@+id/EdtSolution" android:typeface="monospace" android:textSize="24sp"
                android:layout_marginTop="16dp" android:layout_marginLeft="16dp" android:layout_marginRight="16dp"
                android:hint="@string/write_solution"/>
        <SeekBar
                style="@android:style/Widget.DeviceDefault.SeekBar"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:max="10"
                android:progress="5"
                android:id="@+id/SkbDifficulty" android:thumb="@drawable/ic_icon_triangle"
                app:tickMark="@drawable/ic_icon_line" android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp" android:layout_marginRight="16dp"
        />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>